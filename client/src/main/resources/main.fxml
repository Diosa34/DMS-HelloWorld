<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<GridPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.diosa.dms.MainSceneController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints fillHeight="false" vgrow="NEVER" />
        <RowConstraints fillHeight="false" valignment="TOP" vgrow="NEVER" />
        <RowConstraints fillHeight="true" vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label visible="false"/>
            <JFXButton fx:id="signUpBtn" text="Sign Up" onAction="#signUpHandle"/>
            <JFXButton fx:id="logInBtn" text="Log In" onAction="#logInHandle"/>
            <Label text="" visible="false"/>
        </HBox>
        <Canvas GridPane.columnIndex="2" GridPane.rowSpan="3" />
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button text="Add" visible="false" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
                <Button text="Add if min" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
                <Button text="Clear" visible="false" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Button text="Remove by ID" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
                <Button text="Remove lower" visible="false" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <Button text="Update" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <Button text="Count by type" visible="false" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <Button text="Group counting by type" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <Button text="Remove first" visible="false" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
                <Button text="Sum of engine power" visible="false" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
            </children>
        </GridPane>
        <GridPane GridPane.columnIndex="1" GridPane.rowSpan="3">
            <columnConstraints>
                <ColumnConstraints fillWidth="true" hgrow="ALWAYS" />
                <ColumnConstraints fillWidth="false" hgrow="NEVER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints fillHeight="true" vgrow="ALWAYS" />
                <RowConstraints fillHeight="false" vgrow="NEVER" />
            </rowConstraints>
            <children>
                <TableView GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <columns>
                        <!-- Колонки таблицы -->
                        <TableColumn text="ID" />
                        <TableColumn text="Name" />
                        <TableColumn text="X" />
                        <TableColumn text="Y" />
                        <TableColumn text="Creation Date" />
                        <TableColumn text="Engine Power" />
                        <TableColumn text="Vehicle Type" />
                        <TableColumn text="Fuel Type" />
                        <TableColumn text="Username" />
                    </columns>
                </TableView>
                <ScrollBar orientation="VERTICAL" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <ScrollBar orientation="HORIZONTAL" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            </children>
        </GridPane>

    </children>
</GridPane>
